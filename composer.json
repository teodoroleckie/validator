{
  "name": "tleckie/validator",
  "license": "MIT",
  "description": "PHP validators",
  "type": "library",
  "homepage": "https://github.com/teodoroleckie/validator",
  "authors": [
    {
      "name": "Teodoro Leckie Westberg",
      "email": "teodoroleckie@gmail.com"
    }
  ],
  "keywords": [
    "tleckie",
    "enum",
    "php-enum",
    "enumerator",
    "php",
    "php-8"
  ],
  "autoload": {
    "psr-4": {
      "Tleckie\\Validator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tleckie\\Validator\\Tests\\": "tests/"
    }
  },
  "provide": {
  },
  "require": {
    "php": "^8",
    "tleckie/collection": "^1.0",
    "tleckie/enum": "^1.0"
  },
  "require-dev": {
    "infection/infection": "^0.21.5",
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "v3.0.0-beta.2",
    "mikey179/vfsstream": "^1.6",
    "squizlabs/php_codesniffer": "^3.6"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "vendor-dir": "vendor",
    "bin-dir": "bin"
  },
  "scripts": {
    "fix-src": "./bin/php-cs-fixer fix src/ ",
    "fix-tests": "./bin/php-cs-fixer fix tests/",
    "tests": "./bin/phpunit ./tests/",
    "infection": "infection",
    "check": [
      "@fix-src",
      "@fix-tests",
      "@tests",
      "@infection"
    ]
  }
}
